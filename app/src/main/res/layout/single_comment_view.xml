<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:id="@+id/complete_comment"
    >

    <TextView
        android:id="@+id/commenter_imageText"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circular_background"
        android:text="FL"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginStart="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/commenter_username"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18-9-2023"
                android:layout_alignParentEnd="true"
                android:id="@+id/comment_time"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is Actual Comment, This is Actual Comment, This is Actual Comment"
            android:id="@+id/comment_text"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/separator_line"
            />

    </LinearLayout>

</LinearLayout>