<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_marginBottom="8dp">


    <ImageView
        android:id="@+id/image_single_post_view"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/upload_icon2"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/name_single_post_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Post"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="275dp"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/description_single_post_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="My Post Description Post Description Post Description Post Description Post Description Post Description"
        android:textSize="15dp"
        android:layout_below="@+id/name_single_post_view"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        />

</RelativeLayout>