<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/chat_color_receiver"
        android:background="@drawable/edit_text_rounded_corner"
        android:padding="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/left_chat_user"
            android:text="Username"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/left_chat_text"
            android:text="Hi How are you"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/chat_color_sender"
        android:background="@drawable/edit_text_rounded_corner"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:padding="8dp">
        <TextView
            android:id="@+id/right_chat_user"
            android:text="Username"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:textSize="15sp"
            android:layout_gravity="end"
            />
        <TextView
            android:id="@+id/right_chat_text"
            android:text="I am Fine long messaeg"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            />
    </LinearLayout>

</RelativeLayout>